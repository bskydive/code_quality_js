{
	"": "https://www.npmjs.com/package/jscpd#options",
	"threshold": 0.1,
	"ignore": [
		"**/__snapshots__/**",
		"**/node_modules/**",
		"**/*.min.js",
		"**/*.map",
		"**/dist/**"
	],
	"absolute": true,
	"pattern": "**/*.{ts,js,scss}",
	"min-tokens": 50,
	"min-lines": 5,
	"max-lines": 1000,
	"max-size": "100kb",
	"reporters": [
        "consoleFull", 
        "markdown", 
        "badge", 
        "html"
    ],
    "output": "./log",
    "mode": "mild",
    "format": [
        "javascript",
        "markup",
        "css",
        "typescript",
        "scss",
        "html"
    ],
    "blame": true,
    "ignoreCase": true,
    "noSymLinks": true,
    "formats-exts": [
        "javascript:es,es6"
    ]
}
