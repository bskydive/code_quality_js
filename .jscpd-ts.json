{
	"": "https://www.npmjs.com/package/jscpd#options",
	"threshold": 20.1,
	"ignore": [
		"**/__snapshots__/**",
		"**/node_modules/**",
		"**/*.min.js",
		"**/*.map",
		"**/dist/**",
		"**/*module*",
		"**/*model*",
		"**/*mock*",
		"**/*interface*"
	],
	"absolute": true,
	"pattern": "**/*.{ts,js}",
	"min-tokens": 50,
	"min-lines": 5,
	"max-lines": 1000,
	"max-size": "100kb",
	"reporters": [
        "consoleFull", 
        "markdown", 
        "html"
    ],
    "output": "./log/jscpd-ts",
    "mode": "mild",
    "format": [
        "javascript",
        "typescript"
    ],
    "blame": false,
    "ignoreCase": true,
    "noSymLinks": true,
    "formats-exts": [
        "javascript:es,es6"
    ]
}
