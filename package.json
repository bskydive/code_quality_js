{
	"name": "lint",
	"version": "1.2.0",
	"description": "",
	"private": "false",
	"main": "src/index.ts",
	"engines": {
		"node": "^20.4.0"
	},
	"scripts": {
		"!!!for global linting!!!": "export LINTER_PATH=./",
		"ngng": "node --optimize_for_size --max_old_space_size=4000 --gc_interval=100 ./node_modules/@angular/cli/bin/ng",
		"lint:all": "npm run lint:es; npm run lint:scss; npm run lint:spell; npm run lint:cp",
		"--lint:ts": "tslint -c ${LINTER_PATH}tslint.json -p ./tsconfig.eslint.json -t msbuild",
		"lint:es": "node --optimize_for_size --max_old_space_size=8000 --gc_interval=100 ${LINTER_PATH}node_modules/eslint/bin/eslint.js -c ${LINTER_PATH}.eslintrc.js -o log/eslint.log -f visualstudio ./src",
		"lint:scss": "stylelint --config ${LINTER_PATH}.stylelintrc-scss.json -f compact --custom-syntax postcss-scss \"./src/**/*.scss\"",
		"lint:less": "stylelint --config ${LINTER_PATH}.stylelintrc-less.js -f compact --custom-syntax postcss-less \"./src/**/*.less\"",
		"lint:spell": "cspell -c ${LINTER_PATH}.cspell.json './src/**/*.{js,ts}'",
		"lint:cp": "jscpd -c .jscpd.json ./src",
		"lint:cp-css": "jscpd -c .jscpd-css.json ./src",
		"lint:cp-html": "jscpd -c .jscpd-html.json ./src",
		"lint:cp-ts": "jscpd -c .jscpd-ts.json ./src",
		"--lint:ng": "ng lint",
		"lint:prettier": "./node_modules/.bin/prettier -c \"**/*.html\"",
		"--build": "ng build  --aot --prod",
		"--build:analyze": "ng build --stats-json",
		"--webpack:build": "webpack --profile --json > dist/stats.json",
		"--webpack:analyze:view": "webpack-bundle-analyzer dist/stats.json",
		"--test-coverage": "ng test --browsers=Chrome  --codeCoverage=true --watch=false",
		"--test-coverage-headless": "ng test --browsers=ChromeHeadlessNoSandbox --codeCoverage=true --progress=true",
		"--test-headless": "ng test --browsers=ChromeHeadlessNoSandbox --codeCoverage=true --progress=true",
		"--e2e": "ng e2e"
	},
	"author": "stepanovv.ru",
	"license": "MIT",
	"dependencies": {
		"npm-check": "^6.0.1"
	},
	"devDependencies": {
		"@angular-eslint/builder": "^16.1.0",
		"@angular-eslint/eslint-plugin": "^16.1.0",
		"@angular-eslint/eslint-plugin-template": "^16.1.0",
		"@angular-eslint/schematics": "^16.1.0",
		"@angular-eslint/template-parser": "^16.1.0",
		"@types/fingerprintjs2": "^2.0.0",
		"@types/jasmine": "^4.0.3",
		"@types/jasminewd2": "^2.0.10",
		"@types/lodash": "^4.14.182",
		"@types/node": "^20.4.4",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"codelyzer": "^6.0.2",
		"cspell": "^6.31.2",
		"cspell-dict-russian": "^1.2.1",
		"doiuse": "^6.0.2",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-compat": "^4.0.2",
		"eslint-plugin-flowtype": "^8.0.3",
		"eslint-plugin-functional": "^5.0.8",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-n": "^16.0.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.5.0",
		"eslint-plugin-rxjs": "^5.0.2",
		"jscpd": "^3.4.5",
		"prettier": "^3.0.0",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended-less": "^1.0.4",
		"stylelint-config-recommended-scss": "^12.0.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-less": "^1.0.8",
		"stylelint-order": "^6.0.3",
		"stylelint-processor-styled-components": "^1.10.0",
		"stylelint-scss": "^5.0.1",
		"ts-node": "^10.7.0",
		"typescript": "^5.1.6"
	}
}
